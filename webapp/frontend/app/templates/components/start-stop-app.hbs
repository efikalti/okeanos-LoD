{{#if start}}
  <form {{action "start" app on="submit"}} method="post">
    {{#if disabled}}
      <button class="btn btn-success" disabled type="submit">Start</button>
    {{else}}
      <button class="btn btn-success" active type="submit">Start</button>
    {{/if}}
  </form>
{{else}}
  <form {{action "stop" app on="submit"}} method="post">
    {{#if disabled}}
      <button class="btn btn-danger" disabled type="submit">Stop</button>
    {{else}}
      <button class="btn btn-danger" active type="submit">Stop</button>
    {{/if}}
  </form>
{{/if}}
