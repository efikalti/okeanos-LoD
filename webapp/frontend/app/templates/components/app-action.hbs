{{#if start}}

    <form {{action "start" app on="submit"}} method="post">
      {{#if disabled}}
          <button class="btn btn-success btn-xs disabled has-tooltip" type="submit"
                  data-tooltip-content="<center>Cannot start an application, while
                  {{tool-tip-message}}!</center>">
              <i class="fa fa-play"></i> Start</button>
      {{else}}
          <button class="btn btn-success btn-xs" active type="submit"><i class="fa fa-play"></i> Start</button>
      {{/if}}
    </form>

{{else if stop}}
    <form {{action "stop" app on="submit"}} method="post">
      {{#if disabled}}
        <button class="btn btn-danger btn-xs disabled has-tooltip" type="submit"
                data-tooltip-content="<center>Cannot stop an application, while
                {{tool-tip-message}}!</center>">
          <i class="fa fa-stop"></i> Stop</button>
      {{else}}
        <button class="btn btn-danger btn-xs" active type="submit"><i class="fa fa-stop"></i> Stop</button>
      {{/if}}
    </form>

{{else if deploy}}
    <form {{action "deploy" app on="submit"}} method="post">
      {{#if disabled}}
        <button class="btn btn-info btn-xs disabled has-tooltip" type="submit"><i class="fa fa-mail-reply"></i> Deploy</button>
      {{else}}
        <button class="btn btn-info btn-xs" active type="submit"><i class="fa fa-mail-reply"></i> Deploy</button>
      {{/if}}
    </form>

{{else if withdraw}}
    <form {{action "withdraw" app on="submit"}} method="post">
      {{#if disabled}}
        <button class="btn btn-danger btn-xs disabled has-tooltip"
                type="submit"
                data-tooltip-content="<center>Cannot undeploy an application, while
                {{tool-tip-message}}!</center>">
            <i class="fa fa-share"></i> Undeploy</button>
      {{else}}
        <button class="btn btn-danger btn-xs" active type="submit"><i class="fa fa-share"></i> Undeploy</button>
      {{/if}}
    </form>

{{/if}}
