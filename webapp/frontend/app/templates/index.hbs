<section class="content">
  <div class="lockscreen-wrapper">
    <div class="lockscreen-logo">
      <span class="logo-lg"> <img src="assets/img/okeanos-ico.png" alt="Okeanos" style="margin-bottom:5px;margin-right: 3px;"><b>λambda</b></span>
    </div>
    <!-- User name -->

    <!-- START LOCK SCREEN ITEM -->
    <div class="lockscreen-item">
      <!-- lockscreen image -->
      <div class="lockscreen-image">
        <img src="assets/img/default_blogger.png" alt="User Image">
      </div>
      <!-- /.lockscreen-image -->

      <!-- lockscreen credentials (contains the form) -->
      <form class="lockscreen-credentials" {{action "authenticate" on="submit"}}>
        <div class="input-group">
          {{input value=token placeholder="token" type="password" class="form-control" id="token"}}
          <div class="input-group-btn">
            <button class="btn"><i class="fa fa-arrow-right text-muted"></i></button>
          </div>
        </div>
      </form><!-- /.lockscreen credentials -->

    </div><!-- /.lockscreen-item -->
      <div class="help-block text-center">
        Enter your token to retrieve your session
      </div>
             {{#if loginFailed}}
        <div id="id_alert_wrongtoken" class="alert alert-dismissable alert-danger">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <strong>Wrong Token.</strong> Please <a href="#" {{action 'authenticate'}}>try again.</a>
        </div>
        {{/if}}
        {{#if serverError}}
        <div id="id_alert_wrongtoken" class="alert alert-dismissable alert-danger">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <strong>Internal server error.</strong> Please try later.
        </div>
        {{/if}}
  </div><!-- /.center -->
</section><!-- /.content -->
